@using Model;
@{
    ViewBag.Title = "Index";
}
<style>
    .msg-content {
        width: 70%;
        border: 5px solid #F0F0F0;
        height: 500px;
        overflow-y: auto;
        padding: 20px;
    }

    .send, .replay {
        display: inline-block;
        line-height: 30px;
        color: #fff;
        font-size: 14px;
        border-radius: 4px;
        padding: 0 10px;
        font-weight: 600;
        font-family: "微软雅黑";
        box-shadow: 0 2px 5px #888;
    }

    .send {
        color: #333;
        background-color: #C8C8C8;
    }

    .replay {
        background-color: #51C332;
    }
</style>
<h2>微信消息</h2>
<div class="msg-content">
    @{
        List<Message> list = ViewBag.Data;
        if (list != null && list.Count > 0)
        {
            foreach (var item in list)
            {

                <p><span>@item.FromUserName : </span><span class="@item.Type"> @item.Content</span></p>

            }
        }
    }
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    $(function () {
        //ajax轮询消息
        setInterval(function () {
            $.get("/WeiXin/GetMsg", "", function (data) {
                if (data) {
                    var p = "";
                    $(".msg-content").text(" ");
                    for (var i = 0; i < data.length; i++) {
                        p = $("<p><span>" + data[i].FromUserName + " : </span><span class=\"" + data[i].Type + "\">" + data[i].Content + "</span></p>");
                        $(".msg-content").append(p);
                    }
                }
            })
        }, 3000);


    });

</script>